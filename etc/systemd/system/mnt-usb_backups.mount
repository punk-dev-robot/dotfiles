[Unit]
Description=USB encrypted btrfs backup mount
After=dev-mapper-usb_backups.device
Requires=dev-mapper-usb_backups.device

[Mount]
What=/dev/mapper/usb_backups
Where=/mnt/usb_backups
Type=btrfs
Options=defaults,noatime,compress=zstd:1
TimeoutSec=5

