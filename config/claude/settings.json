{
  "cleanupPeriodDays": 3,
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "60000",
    "BASH_MAX_TIMEOUT_MS": "500000",
    "BASH_MAX_OUTPUT_LENGTH": "1000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "0",
    "DISABLE_TELEMETRY": "1",
    "DISABLE_AUTOUPDATER": "",
    "MCP_TIMEOUT": "180000",
    "MAX_MCP_OUTPUT_TOKENS": "50000",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": ["Read(~/dotfiles)"],
    "deny": ["Bash(nx run deploy:*)", "Bash(nx deploy:*)"],
    "defaultMode": "plan",
    "additionalDirectories": [
      "/home/kuba/Pictures/Screenshots",
      "/home/kuba/dotfiles"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/kuba/.config/claude/hooks/modern-cli.py"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "/home/kuba/.config/claude/hooks/prefer-tools.py"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "/home/kuba/.config/claude/hooks/prefer-tools.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/kuba/.config/claude/hooks/notify.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"/home/kuba/.config/claude/hooks/gsd-check-update.js\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node \"/home/kuba/.config/claude/hooks/gsd-statusline.js\""
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "serena@claude-plugins-official": false,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "exa-mcp-server@exa-mcp-server": true,
    "astral@astral-sh": true,
    "code-simplifier@claude-plugins-official": true,
    "hugging-face-cli@huggingface-skills": true,
    "hugging-face-datasets@huggingface-skills": true,
    "hugging-face-jobs@huggingface-skills": true
  },
  "alwaysThinkingEnabled": true
}
