#!/bin/sh

profile=$1

if [ -z $profile ]; then
  echo
  echo "Usage: dock profile"
  echo
  exit 1
fi

if [ $profile = dock ] || [ $profile = home ] || [ $profile = office ]; then
  sudo systemctl stop keyd
  light -S 100
  # swaymsg workspace 1, move workspace 1 to output eDP-1
elif [ $profile = off ] || [ $profile = lap ]; then
  sudo systemctl start keyd
  light -S 30
fi

notify-send "Profile $profile applied"
